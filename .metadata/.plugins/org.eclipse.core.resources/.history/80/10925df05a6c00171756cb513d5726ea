$(document).ready(function(){
	$(".button").on('click', function(){
		var name = $(".name").val();
		var pass = $(".pass").val();
		alert(name+' ^ '+pass);
		if(name&pass!=null){
			var data = "name="+name+"&pass="+pass;	
			$.ajax({
				type:'POST',
				data: data,
				url:"",
				success: function (result){
					alert("Поптыка "+result);
				}
			});
		}
		if(/*name=='' & pass==''*/ name&pass==''){
			alert("Поля почта и/или пароль пустые! Попробуйте еще раз");
		}
	});
});